{
  "name": "svelte-app",
  "version": "1.0.0",
  "devDependencies": {
    "concat-cli": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.16.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.1",
    "rollup-plugin-node-resolve": "^5.0.4",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.0.0",
    "sirv-cli": "^0.4.0",
    "svelte": "^3.5.3"
  },
  "scripts": {
    "build-pascal": "rollup -c rollup.config-pascal.js",
    "build-triangle": "rollup -c rollup.config-triangle.js",
    "concat-js": "npx concat-cli -f dist/triangle-item.js dist/pascal-triangle.js -o dist/bundle.js",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "npm run build-pascal && npm run build-triangle && npm run concat-js",
    "postbuild": "cp index.html dist"
  }
}
